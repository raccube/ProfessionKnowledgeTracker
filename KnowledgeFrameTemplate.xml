<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="KnowledgeFrameTemplate.lua"/>
    <Frame name="KnowledgeFrameTemplate" parent="ProfessionsFrame" setAllPoints="true" mixin="KnowledgePageMixin" virtual="true">
        <Frames>
            <Frame parentKey="SourceList" inherits="KnowledgeSourceList">
                <Size x="274"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="5" y="-72"/>
                    <Anchor point="BOTTOMLEFT" y="5"/>
                </Anchors>
            </Frame>
            <Frame parentKey="DetailsForm" setAllPoints="true" useParentLevel="true">
                <Size x="793" y="553"/>
                <KeyValues>
                    <KeyValue key="layoutType" value="InsetFrameTemplate" type="string"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.SourceList" relativePoint="TOPRIGHT" x="2" y="0"/>
                    <Anchor point="TOPRIGHT" x="-6" />
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString parentKey="SourceName" inherits="GameFontHighlightMed2" justifyV="TOP" justifyH="LEFT">
                            <Size x="400" y="0"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.SourceIcon" relativePoint="TOPLEFT" x="90" y="-50"/>
                            </Anchors>
                        </FontString>
                        <FontString parentKey="DetailText" inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP">
                            <Size x="600" y="0"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.SourceIcon" relativePoint="TOPLEFT" x="90" y="-250"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background"/>
                    </Layer>
                </Layers>
                <Frames>
                    <Button parentKey="SourceIcon" inherits="ProfessionsOutputButtonTemplate">
                        <KeyValues>
                            <KeyValue key="noProfessionQualityOverlay" value="true" type="boolean"/>
                        </KeyValues>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="28" y="-33"/>
                        </Anchors>
                    </Button>
                    <Frame parentKey="Reagents" inherits="ProfessionsReagentContainerTemplate">
                        <KeyValues>
                            <KeyValue key="labelText" value="PROFESSIONS_REAGENT_CONTAINER_LABEL" type="global"/>
                        </KeyValues>
                        <Anchors>
                            <Anchor point="TOP" relativeKey="$parent.SourceIcon" relativePoint="BOTTOM" x="75" y="-65"/>
                        </Anchors>
                    </Frame>
                    <Frame parentKey="NineSlice" inherits="NineSlicePanelTemplate"/>
                </Frames>
            </Frame>
            <Button parentKey="WaypointButton" inherits="UIPanelButtonTemplate" motionScriptsWhileDisabled="true">
                <Size x="120" y="22"/>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
            <OnShow method="OnShow"/>
            <OnHide method="OnHide"/>
        </Scripts>
    </Frame>
</Ui>